<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">ویرایش دوره های سایت</h2>
        </div>
    </div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
    <div class="card">
        <h5 class="card-header">ویرایش دوره</h5>
        <div class="card-body">

            <%- include(viewPath("layouts/error-messages"),{errors})  %>

            <form action="/admin/course/<%= course._id %>?_method=PUT" method="POST" enctype="multipart/form-data"
                novalidate>
                <div class="form-group row">
                    <div class="col">
                        <label for="title" class="control-label font-weight-bold">عنوان دوره</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="عنوان را وارد کنید"
                            value="<%= course.title %>">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        <label for="type" class="control-label font-weight-bold font-weight-bold">نوع دوره</label>
                        <select name="type" id="type" class="form-control">
                            <option value="vip" <%= course.type === 'vip' ? 'selected' : '' %>>اعضای ویژه</option>
                            <option value="cash" <%= course.type === 'cash' ? 'selected' : '' %>>نقدی</option>
                            <option value="free" <%= course.type === 'free' ? 'selected' : '' %>>رایگان</option>
                        </select>
                    </div>

                    <div class="col">
                        <label for="categories" class="control-label font-weight-bold font-weight-bold">دسته بندی</label>
                        <select name="categories" id="categories" class="form-control form-control-chosen" data-placeholder="دسته بندی مورد نظر را انتخاب نمایید" multiple>
                            <% categories.forEach(category=>{ %>
                                <option value="<%- category.id %>" <%- course.categories.indexOf(category.id) !==-1 ? "selected" :"" %>><%- category.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="body" class="control-label font-weight-bold">متن</label>
                        <textarea rows="5" class="form-control" name="body" id="body"
                            placeholder="متن مقاله را وارد کنید"><%= course.body %></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="images" class="control-label font-weight-bold">تصویر
                            دوره</label>
                        <input type="file" class="form-control" name="images" id="images"
                            placeholder="تصویر مقاله را وارد کنید">
                    </div>
                </div>

                <div class="form-group row">
                    <% Object.entries(course.images).forEach(([size,image])=>{ %>
                        <div class="col-sm-2">
                            <%- size %>
                            <label class="control-label ">
                                <a href="<%- image %>"><img src="<%- image %>" width="100%" ></a>
                            </label>
                           
                        </div>
                   <% }) %>
                    
                </div>


                <div class="form-group row">
                    <div class="col">
                        <label for="price" class="control-label font-weight-bold">قیمت</label>
                        <input type="text" class="form-control" name="price" id="price"
                            placeholder="قیمت ها را وارد کنید" value="<%= course.price %>">
                    </div>
                    <div class="col">
                        <label for="tags" class="control-label font-weight-bold">تگ ها</label>
                        <input type="text" class="form-control" name="tags" id="tags" placeholder="تگ ها را وارد کنید"
                            value="<%= course.tags %>">
                    </div>
                </div>

                <div class="form-group row text-right">
                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                        <button type="submit" class="btn btn-space btn-primary">ویرایش</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

