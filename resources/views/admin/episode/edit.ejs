<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">ویرایش ویدئو</h2>
        </div>
    </div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
    <div class="card">
        <h5 class="card-header">ویرایش دوره</h5>
        <div class="card-body">
            <%- include(viewPath("layouts/error-messages"),{errors})  %>

            <form action="/admin/episode/<%= episode._id %>?_method=PUT" method="POST"  novalidate>
                <div class="form-group row">
                    <div class="col">
                        <label for="number" class="control-label font-weight-bold">شماره ویدیو</label>
                        <input type="text" class="form-control" name="number" id="number"
                            placeholder="شماره ویدیو را وارد کنید" value="<%- episode.number %>">
                    </div>
                    <div class="col">
                        <label for="course" class="control-label font-weight-bold font-weight-bold">عنوان دوره</label>
                        <select name="course" id="course" class="form-control">
                            <% courses.forEach(course => { %>
                            <option value="<%- course._id %>"<%- String(episode.course) == String(course._id) ? 'selected' : '' %>><%- course.title %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class=" col">
                        <label for="title" class="control-label font-weight-bold">عنوان ویدیو</label>
                        <input type="text" class="form-control" name="title" id="title"
                            placeholder="عنوان ویدیو را وارد کنید" value="<%- episode.title %>">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        <label for="type" class="control-label font-weight-bold font-weight-bold">نوع دوره</label>
                        <select name="type" id="type" class="form-control">
                            <option value="vip" <%- episode.type == 'vip' ? 'selected' : '' %>>اعضای ویژه</option>
                            <option value="cash" <%- episode.type == 'cash' ? 'selected' : '' %>>نقدی</option>
                            <option value="free" <%- episode.type == 'free' ? 'selected' : '' %>>رایگان</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="body" class="control-label font-weight-bold">متن</label>
                        <textarea rows="5" class="form-control" name="body" id="body"
                            placeholder="متن ویدیو را وارد کنید"><%- episode.body %></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="time" class="control-label font-weight-bold">زمان</label>
                        <input type="text" class="form-control" name="time" id="time"
                            placeholder="زمان ویدیو را وارد کنید" value="<%- episode.time %>">
                    </div>
                    <div class="col">
                        <label for="videoUrl" class="control-label font-weight-bold">لینک ویدیو</label>
                        <input type="text" class="form-control" name="videoUrl" id="videoUrl"
                            placeholder="لینک ویدیو را وارد کنید" value="<%- episode.videoUrl %>">
                    </div>
                </div>

                <div class="form-group row text-right">
                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                        <button type="submit" class="btn btn-space btn-primary">ویرایش</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

