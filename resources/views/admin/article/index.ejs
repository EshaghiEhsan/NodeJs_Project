<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">مقاله ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                        <tr>
                            <th>نام مقاله</th>
                            <th>بازدید</th>
                            <th>دیدگاه</th>
                            <th>تنظیمات</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% articles.docs.forEach(article => { %>
                            <tr>
                                <td><%- article.title %></td>
                                <td><%- article.viewCount %></td>
                                <td><%- article.comments.commentCount || 0 %></td>
                                <td>
                                    <form action="/admin/article/<%= article._id %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="delete">
                                        <div class="form-group text-center">
                                            <a href="/admin/article/<%= article._id %>/edit"
                                               class="btn-sm btn-primary">ویرایش</a>
                                            <button type="submit" class="btn-sm btn-danger">حذف</button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <%- include(viewPath('layouts/paginate'), { pagination : articles }) %>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>